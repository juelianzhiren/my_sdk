<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_dialog_bg"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"

        android:textColor="#ffffff"
        android:textSize="16sp" />

	<LinearLayout
	    android:id="@+id/ll_dialog_content"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginBottom="15dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_marginRight="10dp"
            >

            <Button
                android:id="@+id/tv_dialog_button_n"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_circular_red"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_negative_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:visibility="gone"
            android:gravity="center">

            <Button
                android:id="@+id/tv_dialog_button_p"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_circular_blue"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>