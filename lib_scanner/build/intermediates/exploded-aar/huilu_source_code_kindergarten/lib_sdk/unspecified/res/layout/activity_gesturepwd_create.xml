<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_login"
    android:gravity="center"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/gesturepwd_create_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="创建手势密码"
        android:textColor="#fff"
        android:textSize="20sp" />

    <com.gzdtq.child.plugin.lockpattern.LockPatternView
        android:id="@+id/gesturepwd_create_lockview"
        android:layout_width="match_parent"
        android:layout_height="280dip"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="#e70012"
            android:gravity="center"
            android:text="aaa"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:background="#6cf"
            android:gravity="center"
            android:text="aaa"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>