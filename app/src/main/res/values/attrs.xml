<resources>
    <declare-styleable name="gifview">
        <attr name="isgifimage" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LyricsView">
        <attr name="lrcTextSize" format="dimension" />
        <attr name="lrcNormalTextSize" format="dimension" />
        <attr name="lrcDividerHeight" format="dimension" />
        <attr name="lrcNormalTextColor" format="reference|color" />
        <attr name="lrcCurrentTextColor" format="reference|color" />
        <attr name="lrcTimelineTextColor" format="reference|color" />
        <attr name="lrcAnimationDuration" format="integer" />
        <attr name="lrcLabel" format="string" />
        <attr name="lrcPadding" format="dimension" />
        <attr name="lrcTimelineColor" format="reference|color" />
        <attr name="lrcTimelineHeight" format="dimension" />
        <attr name="lrcPlayDrawable" format="reference" />
        <attr name="lrcTimeTextColor" format="reference|color" />
        <attr name="lrcTimeTextSize" format="dimension" />
        <attr name="lrcTextGravity">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="roundRadius" format="dimension" />          <!--圆角半径-->
        <attr name="strokeWidth" format="dimension" />          <!--stroke宽度-->
        <attr name="progressAreaColor" format="reference|color" />  <!-- 进度颜色 -->
        <attr name="blankAreaColor" format="reference|color" />     <!-- 非进度颜色 -->
        <attr name="textSize" format="dimension" />              <!-- 文本大小 -->
        <attr name="fillBeforeTextColor" format="reference|color" /> <!-- 被进度覆盖前文本颜色 -->
        <attr name="fillAfterTextColor" format="reference|color" />  <!--  被进度覆盖后文本的颜色 -->
    </declare-styleable>

    <declare-styleable name="PetalsRoundView">
        <attr name="normalFillArcColor" format="reference|color" />      <!--经过圆心的实心圆弧颜色(非高亮)-->
        <attr name="highlightFillArcColor" format="reference|color" />   <!--经过圆心的实心圆弧颜色(高亮)-->
        <attr name="ratioOfPetalImgHeightToCircle" format="float" />     <!--花瓣图片的高度占据大圆的比例-->
        <attr name="circleBorderStrokeWidth" format="dimension" />       <!--圆形外边边界stroke宽度-->
        <attr name="thinRadiusLineWidth" format="dimension" />           <!--细半径线的宽度-->
        <attr name="thickRadiusLineWidth" format="dimension" />          <!--粗半径线的宽度-->
        <attr name="radiusLineColor" format="reference|color" />         <!--半径线的颜色-->
        <attr name="innerCircleRadius" format="dimension" />             <!--内圈圆的半径大小（包括内圆环）-->
        <attr name="innerRingWidth" format="dimension" />                <!--内圈圆环的宽度-->
        <attr name="innerRingColor" format="reference|color" />          <!--内圈圆环的颜色-->
        <attr name="innerCircleExceptRingColor" format="color" />        <!--内圈圆（不包含圆环）的颜色-->
        <attr name="innerCircleTextSize" format="dimension" />           <!--内圈圆文字大小-->
        <attr name="innerCircleTextColor" format="reference|color" />    <!--内圈圆文本颜色-->
        <attr name="outerSectorTextSize" format="dimension" />           <!--外层扇形的文字大小-->
        <attr name="outerSectorTextColor" format="reference|color" />    <!--外层扇形的文字颜色-->
        <attr name="innerCircleMaxLenEachLine" format="integer" />       <!--内圈圆的文本一行最多显示多少个字-->
        <attr name="petalTextSize" format="dimension" />                 <!--花瓣内的文字大小-->
        <attr name="petalNormalTextColor" format="reference|color" />    <!--花瓣内的文字颜色(非高亮)-->
        <attr name="petalHighlightTextColor" format="reference|color" /> <!--花瓣内的文字颜色(高亮)-->
        <attr name="petalAreaMaxLenEachLine" format="integer" />         <!--花瓣内的文本一行最多显示多少个字 -->
        <attr name="petalAreaTextMaxLines" format="integer" />           <!--花瓣内的文字最多显示多少行（默认两行）-->
    </declare-styleable>
</resources>