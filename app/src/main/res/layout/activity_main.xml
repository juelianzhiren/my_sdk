<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="姓名：Tomas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="地址：无44644656445"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. I Love Android. "
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv1" />

    <com.ztq.sdk.widget.MyImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_launcher"/>

    <com.ztq.sdk.widget.CircleProgressBar
        android:id="@+id/cbr"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintRight_toLeftOf="@id/iv"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/overdraw_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overdraw"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"/>

    <Button
        android:id="@+id/webview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="webview"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        app:layout_constraintLeft_toRightOf="@id/overdraw_btn"/>

    <Button
        android:id="@+id/jump_to_content_observer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到ContentObserverActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"/>

    <Button
        android:id="@+id/cardview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到CardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"/>

    <Button
        android:id="@+id/mvp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mvp demo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"/>

    <Button
        android:id="@+id/jump_to_lyrics_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到LyricsActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"/>

    <Button
        android:id="@+id/jump_to_gridview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="跳转到gridview"
        app:layout_constraintLeft_toRightOf="@id/jump_to_lyrics_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"/>

    <Button
        android:id="@+id/jump_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到DemoActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"/>

    <Button
        android:id="@+id/jump_to_animation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="animation例子"
        app:layout_constraintRight_toLeftOf="@id/jump_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"/>

    <Button
        android:id="@+id/ndk_demo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ndk demo"
        app:layout_constraintRight_toLeftOf="@id/jump_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"/>

    <Button
        android:id="@+id/jump_to_zoom_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="跳转到zoomImage"
        app:layout_constraintLeft_toRightOf="@id/jump_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"/>

    <Button
        android:id="@+id/jump_big_picuture_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到BigPictureActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"/>

    <Button
        android:id="@+id/petals_round_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="花瓣demo"
        app:layout_constraintLeft_toRightOf="@id/jump_big_picuture_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"/>

    <Button
        android:id="@+id/mapview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地图demo"
        app:layout_constraintLeft_toRightOf="@id/jump_big_picuture_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="320dp"/>

    <Button
        android:id="@+id/recyclerview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recyclerview_demo"
        app:layout_constraintRight_toLeftOf="@id/jump_big_picuture_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="320dp"/>

    <Button
        android:id="@+id/timeline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间轴demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="320dp"/>

    <Button
        android:id="@+id/touch_demo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事件分发demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="380dp"/>

    <Button
        android:id="@+id/cancel_event_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消事件demo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="380dp"/>

    <Button
        android:id="@+id/net_api_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络剧请求demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="380dp"/>

    <Button
        android:id="@+id/self_widget_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义控件demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="430dp"/>

    <Button
        android:id="@+id/flow_layout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="流式布局demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="430dp"/>

    <Button
        android:id="@+id/acopy_test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACopy demo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="430dp"/>

    <Button
        android:id="@+id/contraint_layout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contraint_layout demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"/>

    <Button
        android:id="@+id/glide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="glide demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="570dp"/>

    <Button
        android:id="@+id/crop_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="crop_image demo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"/>

    <Button
        android:id="@+id/arouter_demo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arouter_demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始动画"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/iv"
        android:background="#e6e6e6"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ztq.sdk.widget.PinyinTextView
                android:id="@+id/pinyin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/iv" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>