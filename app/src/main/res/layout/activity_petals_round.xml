<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.ztq.sdk.widget.CustomPathView
        android:id="@+id/petals_round_view_custom_path_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"/>

    <com.ztq.sdk.widget.PetalsInRoundView
        android:id="@+id/petals_round_view"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:innerCircleTextSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:circleBorderStrokeWidth="5dp"
        app:innerCircleRadius="60dp"
        app:petalAreaMaxLenEachLine="3"
        app:canTurnInCircle="true"/>
</android.support.constraint.ConstraintLayout>