<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_timeline_total_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/item_timeline_top_line_tv"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"/>

    <ImageView
        android:id="@+id/item_timeline_circle_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/item_timeline_top_line_tv"
        android:src="@drawable/shape_gray_circle"/>

    <TextView
        android:id="@+id/item_timeline_remaining_line_tv"
        android:layout_width="2dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/item_timeline_circle_iv"
        android:background="@color/gray"/>

    <ImageView
        android:id="@+id/item_timeline_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    
    <TextView
        android:id="@+id/item_timeline_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_timeline_circle_iv"
        android:layout_alignTop="@id/item_timeline_circle_iv"
        android:layout_toLeftOf="@id/item_timeline_iv"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/item_timeline_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_timeline_content_tv"
        android:layout_below="@id/item_timeline_content_tv"
        android:layout_toLeftOf="@id/item_timeline_iv"
        android:layout_marginTop="0dp"
        android:textSize="18dp"
        android:textColor="@color/gray"/>
</RelativeLayout>