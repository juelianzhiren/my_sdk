<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/audio_record_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="audio record demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/surfaceview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="surfaceview camera demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audio_record_btn"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/textureview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textureview camera demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/surfaceview_btn"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/media_extractor_muxer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="media extractor muxer demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textureview_btn"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/media_collect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="media collect demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_extractor_muxer_btn"
        android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>